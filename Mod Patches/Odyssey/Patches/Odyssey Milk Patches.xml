<?xml version="1.0" encoding="utf-8"?>

<!-- Vanilla milk: Cow: 14/1 (14); Dromedary: 18/2 (9); Goat: 12/3 (4); Elk, Yak: 11/1 (11);
Caribou: 10/2 (5) -->
<!-- Old Muffalo Milk: 16/2 (8) -->

<Patch>

    <!-- Hippo Milk -->
    <Operation Class="PatchOperationAdd">
        <xpath>/Defs/ThingDef[defName = "Hippo"]</xpath>
        <value>
            <comps>
                <li Class="CompProperties_Milkable">
                    <milkDef>Milk</milkDef>
                    <milkIntervalDays>2</milkIntervalDays>
                    <milkAmount>16</milkAmount>
                </li>
            </comps>
        </value>
    </Operation>

